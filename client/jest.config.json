{
  "roots": ["<rootDir>/src"],
  "testMatch": [
    "**/__tests__/**/*.+(ts|tsx|js)",
    "**/?(*.)+(spec|test).+(ts|tsx|js)"
  ],
  "moduleFileExtensions": ["ts", "tsx", "js", "json"],
  "transform": {
    "^.+\\.(ts|tsx)$": ["ts-jest", { "useESM": true }]
  },
  "moduleNameMapper": {
    "^.+\\.(css|less|scss)$": "identity-obj-proxy"
  },
  "clearMocks": true,
  "resetMocks": true,
  "restoreMocks": true,
  "extensionsToTreatAsEsm": [".ts", ".tsx"]
}
